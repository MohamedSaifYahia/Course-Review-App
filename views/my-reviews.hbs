<!DOCTYPE html>
<html>
<head>
    <title>My Reviews</title>
</head>
<body>
    <h1>My Reviews</h1>

    <nav>
        <a href="/">All Reviews</a>
        <a href="/reviews/add">Add a Review</a>
        <a href="/reviews/mine">My Reviews</a>
    </nav>

    <table>
        <thead>
            <tr>
                <th>Course Number</th>
                <th>Course Name</th>
                <th>Semester</th>
                <th>Year</th>
                <th>Professor</th>
                <th>Review</th>
            </tr>
        </thead>
        <tbody>
            {{#each reviews}}
            <tr>
                <td>{{courseNumber}}</td>
                <td>{{courseName}}</td>
                <td>{{semester}}</td>
                <td>{{year}}</td>
                <td>{{professor}}</td>
                <td>{{review}}</td>
            </tr>
            {{else}}
            <tr>
                <td colspan="6">No reviews added in this session.</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</body>
</html>
