<!DOCTYPE html>
<html>
<head>
    <title>Reviews</title>
    <link rel="stylesheet" href="/stylesheets/styles.css">
</head>
<body>
    <h1>Course Reviews</h1>

    <nav>
        <ul>
            <li><a href="/">All Reviews</a></li>
            <li><a href="/reviews/add">Add a Review</a></li>
            <li><a href="/reviews/mine">My Reviews</a></li>
        </ul>
    </nav>

    <form action="/" method="get">
        <label for="semester">Semester:</label>
        <input type="text" id="semester" name="semester">

        <label for="year">Year:</label>
        <input type="number" id="year" name="year">

        <label for="professor">Professor:</label>
        <input type="text" id="professor" name="professor">

        <button type="submit">Filter</button>
    </form>


    <table>
        <thead>
            <tr>
                <th>Course Number</th>
                <th>Course Name</th>
                <th>Semester</th>
                <th>Year</th>
                <th>Professor</th>
                <th>Review</th>
            </tr>
        </thead>
        <tbody>
            {{#each reviews}}
            <tr>
                <td>{{this.courseNumber}}</td>
                <td>{{this.courseName}}</td>
                <td>{{this.semester}}</td>
                <td>{{this.year}}</td>
                <td>{{this.professor}}</td>
                <td>{{this.review}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</body>
</html>
